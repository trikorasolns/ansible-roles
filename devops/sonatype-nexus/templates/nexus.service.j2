[Unit]
Description=nexus service
After=network.target
  
[Service]
Type=forking
LimitNOFILE=65536
ExecStart=/opt/sonatype-nexus/nexus-{{sonatype_nexus_major_version}}.{{sonatype_nexus_minor_version}}/bin/nexus start
ExecStop=/opt/sonatype-nexus/nexus-{{sonatype_nexus_major_version}}.{{sonatype_nexus_minor_version}}/bin/nexus stop
User=nexus
Restart=on-abort
  
[Install]
WantedBy=multi-user.target
